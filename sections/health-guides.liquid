{%- style -%}
  {% if section.settings.bg_color != blank %}
    #shopify-section-{{ section.id }} {
      background-color: {{section.settings.bg_color}};
    }
  {% endif %}
  {% if section.settings.bg_img != blank %}
    #shopify-section-{{ section.id }} {
      background: url({{section.settings.bg_img | img_url: 'master'}}) center/cover no-repeat;
    }
  {% endif %}
  {% if section.settings.txt_color != blank %}
    #shopify-section-{{ section.id }},
    #shopify-section-{{ section.id }} p {
      color: {{section.settings.txt_color}};
    }
  {% endif %}
  
    /* Section Dynamic Spacing */
    #shopify-section-{{ section.id }} .page-width {
      margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
      margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
    @media screen and (min-width: 750px) {
      #shopify-section-{{ section.id }} .page-width {
        margin-top: {{ section.settings.margin_top }}px;
        margin-bottom: {{ section.settings.margin_bottom }}px;
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
  {%- endstyle -%}
  
  <div class="health-guides page-width">
    {% if section.settings.title != blank %}
      <div class="primary-title text--center">{{ section.settings.title }}</div>
    {% endif %}    
    <div class="cards">
      <div class="card">
        <div class="img"><img src="{{ section.settings.img_1 | img_url: 'master' }}" alt=""></div>
        <div class="primary-title">{{ section.settings.title_1 }}</div>
        <div class="primary-desc">{{ section.settings.desc_1 }}</div>
        <a href="{{ section.settings.btn_link_1 }}" class="primary-btn">{{ section.settings.btn_label_1 }}</a>
      </div>
      <div class="card">
        <div class="img"><img src="{{ section.settings.img_2 | img_url: 'master' }}" alt=""></div>
        <div class="primary-title">{{ section.settings.title_2 }}</div>
        <div class="primary-desc">{{ section.settings.desc_2 }}</div>
        <a href="{{ section.settings.btn_link_2 }}" class="primary-btn">{{ section.settings.btn_label_2 }}</a>
      </div>
    </div>
  </div>
  
   
  {% schema %}
  {
    "name": "Health Guides",
    "class": "section section-health-guides",
    "settings": [
      {
        "type": "image_picker",
        "id": "bg_img",
        "label": "Background Image",
        "info": "Keep this blank to use the background color."
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
      },
      {
        "type": "color",
        "id": "txt_color",
        "label": "Content Color"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Section Title",
        "default": "Upcoming Optimal Health Guides"
      },      
      {
        "type": "image_picker",
        "id": "img_1",
        "label": "Card One Image"
      },
      {
        "type": "image_picker",
        "id": "img_2",
        "label": "Card Two Image"
      },
      {
        "type": "text",
        "id": "title_1",
        "label": "Card One Title",
        "default": "Immune Defense Optimal Health Guide"
      },
      {
        "type": "text",
        "id": "title_2",
        "label": "Card Two Title",
        "default": "Ubiquinol CoQ10 Optimal Health Guide"
      },
      {
        "type": "richtext",
        "id": "desc_1",
        "label": "Card One Description",
        "default": "<p>Why is it that some people just donâ€™t seem to get sick? Find out the answer to this and what steps you can take to boost your immune system to become just as resilient.</p>"
      },
      {
        "type": "richtext",
        "id": "desc_2",
        "label": "Card Two Description",
        "default": "<p>Ubiquinol CoQ10 can act as a fuel boost for your body. Find out how it helps boost the conversion of cellular energy and cleans up some of the messier consequences of this as you get older.</p>"
      },
      {
        "type": "url",
        "id": "btn_link_1",
        "label": "Card One Button URL"
      },
      {
        "type": "text",
        "id": "btn_label_1",
        "label": "Card One Button Label",
        "default": "GET NOTIFIED ON RELEASE"
      },
      {
        "type": "url",
        "id": "btn_link_2",
        "label": "Card Two Button URL"
      },
      {
        "type": "text",
        "id": "btn_label_2",
        "label": "Card Two Button Label",
        "default": "GET NOTIFIED ON RELEASE"
      },
      {
        "type": "header",
        "content": "Section Margin/Padding"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 40
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 40
      },
      {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Margin Top",
        "default": 0
      },
      {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Margin Bottom",
        "default": 0
      }
    ],
    "presets": [
      {"name": "Health Guides"}
    ]
  }
  {% endschema %}