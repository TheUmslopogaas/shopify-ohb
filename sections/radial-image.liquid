      <div class="option-title">{{ section.settings.title_3 }}</div>
      <img src="{{ section.settings.img_3 | img_url: 'master' }}" alt="">
    </a>
    <a href="{{section.settings.url_4}}" class="image-option option4">
      <div class="option-title">{{ section.settings.title_4 }}</div>
      <img src="{{ section.settings.img_4 | img_url: 'master' }}" alt="">
    </a>
    <a href="{{section.settings.url_5}}" class="image-option option5">
      <div class="option-title">{{ section.settings.title_5 }}</div>
      <img src="{{ section.settings.img_5 | img_url: 'master' }}" alt="">
