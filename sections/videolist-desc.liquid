{%- style -%}
  {% if section.settings.bg_color != blank %}
    #shopify-section-{{ section.id }} {
      background-color: {{section.settings.bg_color}};
    }
  {% endif %}
  {% if section.settings.bg_img != blank %}
    #shopify-section-{{ section.id }} {
      background: url({{section.settings.bg_img | img_url: 'master'}}) center/cover no-repeat;
    }
  {% endif %}
  {% if section.settings.txt_color != blank %}
    #shopify-section-{{ section.id }},
    #shopify-section-{{ section.id }} p {
      color: {{section.settings.txt_color}};
    }
  {% endif %}
  
  /* Section Dynamic Spacing */
  #shopify-section-{{ section.id }} .page-width {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    #shopify-section-{{ section.id }} .page-width {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="videolist page-width text--center">
  {% if section.settings.title != blank %}
    <div class="primary-title">{{ section.settings.title }}</div>
  {% endif %}
  <div class="videolist-wrap">
    <div class="left-side">
      <img src="{{ section.settings.left_img | img_url: 'master' }}" alt="">
      {% if section.settings.btn_label_left != blank %}
        <a href="{{ section.settings.btn_url_left }}" class="primary-btn">{{ section.settings.btn_label_left }}</a>
      {% endif %}
    </div>
    <div class="middle">
      <div class="videos">
        {% for block in section.blocks %}
          <div class="single-video">{{ block.settings.video }}</div>
        {% endfor %}
      </div>
      {% if section.settings.desc != blank %}
        <div class="primary-desc">{{ section.settings.desc }}</div>
      {% endif %}
    </div>
    <div class="right-side">
      {% if section.settings.right_desc != blank %}
        <div class="primary-desc">{{ section.settings.right_desc }}</div>
      {% endif %}
      {% if section.settings.right_img != blank %}
        <img src="{{ section.settings.right_img | img_url: 'master' }}" alt="">
      {% endif %}
    </div>    
  </div>
</div>

  
{% schema %}
{
  "name": "Video List",
  "class": "section section-videolist",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_img",
      "label": "Background Image",
      "info": "Keep this blank to use the background color."
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    },
    {
      "type": "color",
      "id": "txt_color",
      "label": "Content Color"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Safe, High Quality Products You Can Trust"
    },
    {
      "type": "richtext",
      "id": "desc",
      "label": "Section Description",
      "default": "<p>OHB products are manufactured in a GMP certified facility, right here in the United States. We follow the latest safety protocols to ensure all our products meet the highest quality standards. Our nutrients are naturally sourced through green practices. OHB is committed to delivering excellence in everything we do.</p>"
    },
    {
      "type": "image_picker",
      "id": "left_img",
      "label": "Left Image"
    },
    {
      "type": "text",
      "id": "btn_label_left",
      "label": "Left Button Label",
      "default": "Shop All Our Supplements"
    },
    {
      "type": "url",
      "id": "btn_url_left",
      "label": "Left Button Label"
    },
    {
      "type": "richtext",
      "id": "right_desc",
      "label": "Right Side Description",
      "default": "<p>Omega-3 fatty acids benefit the heart of healthy people and those at high risk of or who have, cardiovascular disease.</p>"
    },
    {
      "type": "image_picker",
      "id": "right_img",
      "label": "Right Image"
    },    
    {
      "type": "header",
      "content": "Section Margin/Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 400,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 400,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 40
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "text",
          "id": "video",
          "label": "Enter Embed Video"
        }
      ]
    }
  ],    
  "presets": [
    {"name": "Video List"}
  ]
}
{% endschema %}
